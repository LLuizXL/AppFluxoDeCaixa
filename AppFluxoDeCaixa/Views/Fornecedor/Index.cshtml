@model IEnumerable<AppFluxoDeCaixa.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}
<div class="container">

<h1 class="display-5 text-light text-center">Cadastro de Fornecedores</h1>

<p>
    <a class="btn btn-secondary btn-lg mt-3" asp-action="Create">Adicionar</a>
</p>

<table class="table table-hover table-striped table-dark mt-5">
    <thead>
        <tr>
           <th class="bg-black">

                    @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="bg-black">

                    @Html.DisplayNameFor(model => model.CNPJ)
            </th>
                <th class="bg-black">

                @Html.DisplayNameFor(model => model.Email)
            </th>
                <th class="bg-black">

                @Html.DisplayNameFor(model => model.Telefone)
            </th>
                <th class="bg-black">

                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
                <th class="bg-black">

                @Html.DisplayNameFor(model => model.Ativo)
            </th>
                <th class="bg-black">
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                        @if (item.Ativo == true)
                        {
                            <h6 class="mt-1">Sim</h6>
                        } else
                        {
                            <h6 class="mt-1">Não</h6>
                        }
                    </td>
            <td>
                <a class="btn btn-outline-primary btn-sm me-2" asp-action="Edit" asp-route-id="@item.FornecedorId">Editar</a>
                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.FornecedorId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>