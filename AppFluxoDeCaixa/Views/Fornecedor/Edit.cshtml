@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Editar Cadastro Fornecedor";
}

<h1 class="display-5 text-light text-center">Editar Cadastro de Fornecedores</h1>

<h4>Fornecedor</h4>
<hr />
<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-12 col-md-8">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md">
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md mt-3">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md mt-3">
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-3  col-md-3 mt-3">
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input type="readonly" asp-for="DataCadastro" class="form-control" value=@DateTime.Now.ToString(" yyyy-MM-dd hh:mm:ss") />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
        </div>
        <div class="col-9 col-md-9 mt-3">
            <div class="form-group form-check form-switch">
                <label class="text-end">Ativo?</label>
                <div class="form-check form-switch form-control-lg">
                    <input class="form-check-input" type="checkbox" role="switch" asp-for="Ativo" /> SIM
                </div>
            </div>
        </div>
    </div>


    <div class="row">


        <div class="col-md-4 mt-4">
            <a asp-action="Index" class="btn btn-sm btn-secondary w-100">Cancelar</a>
        </div>

        <div class="col-md-4">
        </div>

        <div class="col-md-4 ">
            <input type="submit" value="Editar" class="btn btn-success w-100 btn-sm mt-4" />
        </div>

    </div>



</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
