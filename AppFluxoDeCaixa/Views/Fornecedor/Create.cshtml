@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Adicionar Fornecedor";
}

<h1 class="display-5 text-light text-center">Adicionar Fornecedor
</h1>
<hr />

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
          <div class="col-12 col-md-8">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
          </div>
          <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="CNPJ" class="control-label"></label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
          </div>
    </div>

    <div class="row">
        <div class="col-12 col-md mt-3">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
        </div>
        <div class="col-12 col-md mt-3">
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
        </div>
    </div>



    <div class="row">
        

        <div class="col-md-4 mt-4">
            <a asp-action="Index" class="btn btn-sm btn-secondary w-100">Cancelar</a>
        </div>

        <div class="col-md-4">
        </div>

        <div class="col-md-4 ">
            <input type="submit" value="Criar" class="btn btn-success w-100 btn-sm mt-4" />
        </div>
       
    </div>


    <div class="form-group">
        <input type="hidden" asp-for="DataCadastro" class="form-control" value=@DateTime.Now.ToString(" yyyy-MM-dd hh:mm:ss") />
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="Ativo" value="true" />
    </div>


</form>

